/**app.wxss**/
page{
  background-color:#ffffff;  /* 背景颜色 */
  background-image: url(data:image/jpeg;base64,);  /* 背景纹理 */
  --line1:#000000; /* 头像效果边框颜色 */
  --line2:#ffffff; /* 待选择头像框边框颜色 */
  --shadow:#aaaaaa; /* 阴影颜色 */
  --word:#ffffff; /* 滑动条文字颜色 */
  --back:#000000; /* 滑动条背景颜色 */
}
/* 按钮样式 */
button{
  top:25px;
  margin: 0px 20px 10px;
  color: #ffffff; /* 按钮文字颜色 */
  background-color: #000000; /* 按钮背景颜色 */
}
.button-hover{
  color: #aaaaaa; /* 点击文字颜色 */
  background-color: #333333; /* 点击按钮颜色 */
}
button[disabled]{
  color: #aaaaaa !important; /* 禁用按钮文字颜色 */
  background-color: #cccccc !important; /* 禁用按钮背景颜色 */
}

/* 元素容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}